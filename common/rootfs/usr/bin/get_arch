#!/bin/bash

set -e

mode=${1:-unix}
case $(arch) in
    x86_64|amd64)
      case $mode in
          unix|qemu)
            echo "x86_64";;
          docker|ha)
            echo "amd64";;
      esac
    ;;
    aarch64|arm64)
      case $mode in
          unix|ha)
            echo "aarch64";;
          docker)
            echo "arm64";;
          qemu)
            echo "arm-64";;
      esac
    ;;
esac
